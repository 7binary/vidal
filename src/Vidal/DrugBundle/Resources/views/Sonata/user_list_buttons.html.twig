<script type="text/javascript">
	$(document).ready(function() {
		$('#excel').click(function(e) {
			e.preventDefault();
			$('#excel_select').show();
			return false;
		});

		$('#excel_select select').on('change', function() {
			var val = this.value;
			if (val == '0') {
				
