			if (val != '') {
				window.stop();
				window.location = '/admin/excel-users/' + val;
			}
		});

		$('#excel_users').click(function(e) {
			e.preventDefault();
			var pw = prompt('Для загрузки необходимо ввести пароль');
			$.getJSON('/check-keyvalue/users/' + pw, function(isMatch) {
				if (isMatch) {
					window.location = '/download?filename=users.xls&pw=' + pw;
				}
				else {
					alert('Неверно введен пароль');
				}
			});
			return false;
		});
	});
